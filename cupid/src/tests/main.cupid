# All block statements return the value of the last item
int mut lots_of_math = {
	int x = 1 + 2 + 3
	int y = x * 4 * 5
	x + y
} # 126

logs ("Math!", lots_of_math)

# Functions
fun squared = x => x * x
int square_num = squared (12) # 144

fun get_name = first, last {
	first + " " + last
}

log (get_name ("Audrey", "Barnes"))

