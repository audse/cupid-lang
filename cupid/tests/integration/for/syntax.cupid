-- Single-expression body.
for (let c = 0; c < 3;) log c = c + 1;
-- expect: 1
-- expect: 2
-- expect: 3

-- Block body.
for (let a = 0; a < 3; a = a + 1) {
    log a;
}
-- expect: 0
-- expect: 1
-- expect: 2

-- No clauses.
fun foo () {
    for (;;) return 'done';
}
log foo(); -- expect: done

-- No variable.
let i = 0;
for (; i < 2; i = i + 1) log i;
-- expect: 0
-- expect: 1

-- No condition.
fun bar () {
    for (let i = 0;; i = i + 1) {
        log i;
        if i >= 2 return;
    }
}
bar();
-- expect: 0
-- expect: 1
-- expect: 2

-- No increment.
for (let i = 0; i < 2;) {
    log i;
    i = i + 1;
}
-- expect: 0
-- expect: 1

-- Statement bodies.
for (; false;) if true 1; else 2;
for (; false;) while (true) 1;
for (; false;) for (;;) 1;
